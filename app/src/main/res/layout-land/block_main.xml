<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent" android:layout_height="match_parent">    <LinearLayout        android:layout_width="match_parent"        android:layout_height="match_parent"        android:layout_alignParentStart="true"        android:layout_alignParentTop="true"        android:orientation="horizontal">        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"            android:layout_width="360dp"            android:layout_height="fill_parent"            android:orientation="vertical">            <TextView                android:id="@+id/where"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_alignParentTop="true"                android:layout_centerHorizontal="true"                android:layout_gravity="center_horizontal"                android:layout_marginTop="100dp"                android:text="Where do you visit?"                android:textSize="18sp" />            <TextView                android:id="@+id/name"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_below="@+id/where"                android:layout_centerHorizontal="true"                android:layout_gravity="center_horizontal"                android:layout_marginTop="25dp"                android:textSize="18sp" />            <TextView                android:id="@+id/what"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_alignParentTop="true"                android:layout_centerHorizontal="true"                android:layout_gravity="center_horizontal"                android:layout_marginTop="250dp"                android:text="What picture do you take?"                android:textSize="18sp" />            <TextView                android:id="@+id/description"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_below="@+id/what"                android:layout_centerHorizontal="true"                android:layout_gravity="center_horizontal"                android:layout_marginTop="25dp"                android:textSize="18sp" />        </RelativeLayout>        <LinearLayout            android:layout_width="match_parent"            android:layout_height="match_parent"            android:orientation="vertical">            <Button                android:id="@+id/record"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_alignParentTop="true"                android:layout_alignParentEnd="true"                android:layout_gravity="center_horizontal"                android:layout_marginTop="75dp"                android:text="record" />            <Button                android:id="@+id/modify"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_below="@+id/record"                android:layout_alignStart="@+id/record"                android:layout_gravity="center_horizontal"                android:layout_marginTop="25dp"                android:text="modify" />            <Button                android:id="@+id/delete"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_below="@+id/modify"                android:layout_alignStart="@+id/modify"                android:layout_gravity="center_horizontal"                android:layout_marginTop="25dp"                android:text="delete" />        </LinearLayout>    </LinearLayout></RelativeLayout>
<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:id="@+id/block"    android:orientation="horizontal"    android:layout_width="match_parent"    android:layout_height="83dp"    android:descendantFocusability="blocksDescendants" >    <ImageView        android:layout_width="match_parent"        android:layout_height="81dp"        app:srcCompat="@color/colorBack" />    <LinearLayout        android:layout_width="match_parent"        android:layout_height="match_parent">        <ImageView            android:id="@+id/thumbnail"            android:layout_width="144dp"            android:layout_height="81dp"            android:background="@android:color/black"            android:padding="3dp" />            <RelativeLayout            android:layout_width="match_parent"            android:layout_height="match_parent">                <TextView                android:id="@+id/title"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_alignParentStart="true"                android:layout_alignParentTop="true"                android:layout_marginStart="5dp"                android:layout_marginEnd="0dp"                android:layout_toStartOf="@+id/recordButton"                android:maxLines="1"                android:padding="3dp"                android:text="Sample Text"                android:textColor="#000"                android:textSize="16dp" />                <TextView                android:id="@+id/detail"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_below="@+id/title"                android:layout_alignParentStart="true"                android:layout_marginStart="5dp"                android:layout_marginEnd="0dp"                android:layout_toStartOf="@+id/recordButton"                android:maxLines="2"                android:padding="3dp"                android:text="Sample Text"                android:textColor="#000" />            <ImageButton                android:id="@+id/recordButton"                android:layout_width="72dp"                android:layout_height="72dp"                android:layout_alignParentEnd="true"                android:layout_alignParentBottom="false"                android:layout_centerVertical="true"                android:layout_marginEnd="0dp"                android:layout_marginBottom="0dp"                android:layout_weight="1"                android:background="@android:color/transparent"                android:src="@android:drawable/ic_menu_camera" />        </RelativeLayout>    </LinearLayout></RelativeLayout>
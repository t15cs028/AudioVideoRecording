ntTop="true"		android:layout_marginStart="0dp"		android:layout_marginTop="0dp"		android:scaleType="fitXY" />	<RelativeLayout		android:layout_width="match_parent"		android:layout_height="64dp"		android:layout_alignParentBottom="true"		android:layout_marginBottom="20dp">        <Button            android:id="@+id/zooming_operation"            android:layout_width="75dp"            android:layout_height="64dp"            android:layout_alignParentTop="true"            android:layout_marginTop="0dp"            android:layout_marginEnd="50dp"            android:layout_toStartOf="@+id/record_button"            android:backgroundTint="@android:color/holo_blue_bright"            android:maxLines="2"            android:text="manual"            android:textAlignment="textStart"            android:textSize="10sp" />		<ImageButton			android:id="@+id/record_button"			android:layout_width="64dp"			android:layout_height="64dp"			android:layout_alignParentBottom="true"			android:layout_centerHorizontal="true"			android:background="@null"			android:scaleType="fitXY"			android:src="@android:drawable/ic_menu_camera" />		<ImageButton			android:id="@+id/inverted"			android:layout_width="64dp"			android:layout_height="64dp"			android:layout_alignTop="@+id/record_button"			android:layout_marginStart="50dp"			android:layout_alignParentBottom="true"			android:layout_toEndOf="@+id/record_button"			android:background="@null"			android:scaleType="fitXY"			android:src="@android:drawable/stat_notify_sync_noanim" />	</RelativeLayout>	<TextView		android:id="@+id/advice"		android:layout_width="wrap_content"		android:layout_height="wrap_content"		android:layout_alignParentLeft="true"		android:layout_alignParentTop="true"		android:layout_marginLeft="15dp"		android:layout_marginTop="15dp"		android:text="2秒から10秒の映像を撮影しよう！"		android:textColor="#ffff0000" />	<TextView		android:id="@+id/advice_zoom"		android:layout_width="wrap_content"		android:layout_height="wrap_content"		android:layout_alignParentLeft="true"		android:layout_marginLeft="15dp"		android:layout_below="@+id/advice"		android:text="ズームイン・アウトを行き来させるのこぎりズームは避けましょう"		android:textColor="#ffff0000" />	<SeekBar		android:id="@+id/zoom"		android:layout_width="300dp"		android:layout_height="50dp"		android:layout_alignParentBottom="true"		android:layout_centerHorizontal="true"		android:layout_marginBottom="100dp"		android:max="200"		android:progress="0"		android:scaleType="fitXY" /></RelativeLayout>